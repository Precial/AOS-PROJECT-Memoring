<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_weight="1">


            <Button
                android:id="@+id/btn_insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="저장 하기" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="취소 하기" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:layout_weight="1">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글자크기:  "
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/size_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            />



        <Button
            android:id="@+id/size_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="+" />
        <Button
            android:id="@+id/size_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="-" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >



            <TextView
                android:id="@+id/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="글자 색 선택."
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button

                    android:id="@+id/color_black"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/optionblck"/>

                <Button
                    android:id="@+id/color_red"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/optionred"/>

                <Button
                    android:id="@+id/color_yellow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/optionyellow"/>

                <Button
                    android:id="@+id/color_green"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/optiongreen"/>

            </LinearLayout>


            <TextView
                android:id="@+id/textBgcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배경색 선택."
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/color_white"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:background="@color/white"/>

                <Button
                    android:id="@+id/color_peach"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/peach"/>

                <Button
                    android:id="@+id/color_remon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/remon"/>

                <Button
                    android:id="@+id/color_gray"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="폰트 선택."
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/font_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="가"
                    android:textStyle="normal"
                    />

                <Button
                    android:id="@+id/font_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="가"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/font_italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="가"
                    android:textStyle="italic"
                    />

                <Button
                    android:id="@+id/font_boldItalic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="가"
                    android:textStyle="bold|italic"
                    />



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내용을 입력해주세요"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/edit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/editext"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginBottom="15dp">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/textRead"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="36sp"
                    android:visibility="visible" />


                <EditText
                    android:id="@+id/textEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:textSize="36sp"
                    android:visibility="invisible" />





            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    작성 일자:     "
                android:layout_marginBottom="15dp"
                > </TextView>
            <TextView
                android:id="@+id/writeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:layout_marginBottom="15dp"
                > </TextView>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/back"
                        android:drawableLeft="@mipmap/edit"
                        android:paddingLeft="15dp"
                        android:visibility="visible"
                        android:text="메모 수정" />

                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/delete"
                        android:background="@drawable/back"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="15dp"
                        android:visibility="visible"
                        android:text="메모 삭제" />



                </FrameLayout>
            </LinearLayout>


        </LinearLayout>




    </LinearLayout>
   <!-- <TextView
        android:id="@+id/writeTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="마지막으로"
        >

    </TextView>-->
</RelativeLayout>

